# T012 - Environment Variables Template
# Phase V Todo Chatbot - Required Environment Variables
# Copy to .env and fill in values

# =============================================================================
# NEON POSTGRESQL (Required)
# =============================================================================
# Get from: https://console.neon.tech/
NEON_CONNECTION_STRING=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# =============================================================================
# KAFKA / REDPANDA (Local Minikube)
# =============================================================================
KAFKA_BROKERS=redpanda-0.redpanda.kafka.svc.cluster.local:9093

# =============================================================================
# OPENAI API (Required for Chat NL parsing)
# =============================================================================
OPENAI_API_KEY=sk-...

# =============================================================================
# DAPR CONFIGURATION
# =============================================================================
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# =============================================================================
# SERVICE PORTS
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
NOTIFICATION_PORT=8001
RECURRING_PORT=8002
AUDIT_PORT=8003
WEBSOCKET_PORT=8004

# =============================================================================
# KUBERNETES NAMESPACE
# =============================================================================
K8S_NAMESPACE=default

# =============================================================================
# LOG LEVEL
# =============================================================================
LOG_LEVEL=INFO
